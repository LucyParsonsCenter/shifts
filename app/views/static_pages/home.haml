.modal.fade#fullcalendar-edit-modal{"tabindex" => "-1", "role" => "dialog"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"type" => "button", "data-dismiss" => "modal", "aria-label" => "Close"}
          %span{"aria-hidden" => "true"}
            &times;
        %h4.modal-title#edit-modal-title
      .modal-body#edit-modal-body
        %p
      .modal-footer
        %button.btn.btn-default{"type" => "button", "data-dismiss" => "modal"}
          Close
        %button.btn.btn-primary{"type" => "button"}
          Save changes
.modal.fade#fullcalendar-new-modal{"tabindex" => "-1", "role" => "dialog"}
  .modal-dialog
    .modal-content
      = semantic_form_for @event do |f|
        .modal-header
          %button.close{"type" => "button", "data-dismiss" => "modal", "aria-label" => "Close"}
            %span{"aria-hidden" => "true"}
              &times;
          %h4.modal-title#new-modal-title
            New event
        .modal-body#new-modal-body
          = f.inputs :start_time
          = f.inputs :end_time
          = f.input :meeting
          = f.input :collective_member
          = f.input :trainee
        .modal-footer
          %button.btn.btn-default{"type" => "button", "data-dismiss" => "modal"}
            Close
          = f.action :submit, :as => :button, class: "btn btn-primary"
#calendar
